# Configurações do Banco de Dados PostgreSQL
POSTGRES_USER=seu_usuario_postgres
POSTGRES_PASSWORD=sua_senha_postgres
POSTGRES_DB=nome_do_banco
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@host-do-banco:5432/${POSTGRES_DB}

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000

# URL da API para o Frontend
REACT_APP_API_URL=http://localhost:8000  # ou URL do serviço em produção

# Configurações de Autenticação
SECRET_KEY=altere_para_uma_chave_secreta_aleatoria
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Configurações de API Externa (Groq)
GROQ_API_KEY=sua_chave_groq_aqui

# Configuração de Ambiente Python (ajuste conforme necessário)
PYTHONPATH=/caminho/para/o/projeto